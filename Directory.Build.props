<Project>

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>BuildingBlocks</Authors>
    <Company>BuildingBlocks</Company>
    <Product>BuildingBlocks</Product>
    <Copyright>Copyright Â© 2025 BuildingBlocks</Copyright>
  </PropertyGroup>

  <!-- NuGet Package Properties -->
  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageVersion>1.0.0</PackageVersion>
    <PackageTags>clean-architecture;building-blocks;dotnet</PackageTags>
    <PackageProjectUrl>https://github.com/your-username/building-blocks</PackageProjectUrl>
    <RepositoryUrl>https://github.com/your-username/building-blocks</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <!-- Include README in all packages -->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" Condition="Exists('README.md')" />
  </ItemGroup>

</Project>